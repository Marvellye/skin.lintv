<?xml version="1.0" encoding="UTF-8"?>
<addon id="skin.lintv" version="2.1.0" name="LInTV" provider-name="Marvelly">
    <requires>
        <!-- Change this version based on your Kodi version mentioned above -->
        <import addon="xbmc.gui" version="5.17.0"/> 
    </requires>
    <extension point="xbmc.gui.skin" debugging="true">
        <res width="1920" height="1080" aspect="16:9" default="true" folder="xml"/>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Android TV Style Skin</summary>
        <description lang="en_GB">LInTV development build.</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>